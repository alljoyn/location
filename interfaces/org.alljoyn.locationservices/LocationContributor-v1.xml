<?xml version="1.0"?>
<node xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.alljoyn.org/schemas/introspect.xsd">
  <interface name="org.alljoyn.locationservices.Location.Contributor">
    <description>
      Interface to add information to the Location Service
    </description>
    <property name="Version" type="q" access="read">
      <description language="en">Interface Version</description>
      <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
    </property>
    <annotation name="org.alljoyn.Bus.Secure" value="true" />

    <struct name="LocationEntity">
     <description language="en" >
       The representation of a device in the Location service
     </description>
      <field name="entityDescriptor" type="s"/>
      <field name="entityMac" type="ay"/>
    </struct>

    <struct name="LocationData">
      <description language="en" >
       The representation of location data. 
       The field origin defines the reference point (e.g. wgs84)
     </description>
      <field name="origin" type="s"/>
      <field name="x" type="i"/>
      <field name="y" type="i"/>
      <field name="z" type="i"/>
      <field name="horizontalAccuracy" type="i"/>
      <field name="horizontalAccuracyMultiplier" type="i"/>
      <field name="verticalAccuracy" type="i"/>
      <field name="verticalAccuracyMultiplier" type="i"/>
    </struct>

    <method name="UpdateLocationInfo">
      <description language="en">
	Inject entity information into the provider.  
	The provider will inject the information, as necessary,
	to any active trackers.
      </description>
      <arg name="contributor" type="[LocationEntity]" direction="in"/>
      <arg name="entity" type="[LocationEntity]" direction="in"/>
      <arg name="location" type="[LocationData]" direction="in"/>
    </method>

    <!--
      Can we remove this method?
    <method name="SetDefaultLocationAccuracy">
      <arg name="entity" type="[Entity]" direction="in"/>
      <arg name="horizontalAccuracy" type="i" direction="in"/>
      <arg name="horizontalAccuracyMultiplier" type="i" direction="in"/>
      <arg name="verticalAccuracy" type="i" direction="in"/>
      <arg name="verticalAccuracyMultiplier" type="i" direction="in"/>
    </method>
  -->

  </interface>
</node>
